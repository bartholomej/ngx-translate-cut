{
  "name": "ngx-translate-cut",
  "version": "1.2.1",
  "description": "Angular pipe for cutting translations (plugin for ngx-translate)",
  "author": "Lukas Bartak <bart@bartweb.cz> (https://github.com/bartholomej)",
  "scripts": {
    "ng": "ng",
    "start:demo": "ng serve",
    "start": "ng build ngx-translate-cut --watch",
    "build": "ng build ngx-translate-cut",
    "build:demo": "ng build demo --prod",
    "deploy:ghpages": "yarn build && yarn build:demo && ngh --dir=dist/demo",
    "publish:npmjs": "npm run syncprojects && npm run build && npm publish --folder dist/ngx-translate-cut",
    "gpr:setup": "node scripts/gpr",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "translations:extract": "ngx-translate-extract --input ./projects/demo/src --output ./projects/demo/src/assets/i18n/en.json --clean --sort --format namespaced-json --marker _ --format-indentation '  '",
    "create:version": "node scripts/version.js",
    "postinstall": "yarn create:version",
    "syncprojects": "cp README.md projects/ngx-translate-cut/README.md && node scripts/sync-version.js",
    "version": "npm run syncprojects && git add ./projects/ngx-translate-cut/",
    "postversion": "git push && git push --follow-tags",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s ðŸ› \"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s ðŸš€\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s ðŸ’¥ \""
  },
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "@biesbjerg/ngx-translate-extract": "^4.2.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.24",
    "@angular-devkit/build-ng-packagr": "~0.803.24",
    "@angular/cli": "~8.3.24",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "husky": "^4.2.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^5.4.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tsickle": "^0.37.0",
    "tslint": "~5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "homepage": "https://github.com/bartholomej/ngx-translate-cut",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/bartholomej/ngx-translate-cut.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bartholomej/ngx-translate-cut/issues"
  },
  "keywords": [
    "angular",
    "ngx",
    "translation",
    "i18n",
    "ngx-translate"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
